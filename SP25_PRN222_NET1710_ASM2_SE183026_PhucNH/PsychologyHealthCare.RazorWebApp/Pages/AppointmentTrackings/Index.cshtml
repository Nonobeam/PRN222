@page
@model PsychologyHealthCare.RazorWebApp.Pages.AppointmentTrackings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="./Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AppointmentTracking[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentTracking[0].CreatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentTracking[0].UpdatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentTracking[0].Rating)</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentTracking[0].Holder)</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentTracking[0].Address)</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentTracking[0].SystemStatus)</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentTracking[0].Type)</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentTracking[0].ProgramTracking.Name)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="appointmentList">
        @foreach (var item in Model.AppointmentTracking)
        {
            <tr id="@item.Id">
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@item.CreatedDate.ToString("dd-MM-yyyy HH:mm:ss")</td>
                <td>@item.UpdatedDate?.ToString("dd-MM-yyyy HH:mm:ss")</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>@Html.DisplayFor(modelItem => item.Holder)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.SystemStatus)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.ProgramTracking.Name)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/health.js"></script>